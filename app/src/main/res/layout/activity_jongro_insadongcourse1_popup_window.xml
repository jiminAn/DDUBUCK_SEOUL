<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="400dp"
android:layout_height="500dp"
android:padding="5dp"
android:background="@color/colorPrimaryDark"
android:layout_gravity="center"
tools:context=".Jongro_insadong.Jongro_insadongcourse1_popupWindow">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/x_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="149dp"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:src="@drawable/date_theme" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#686075"
        android:text="운현궁에서 예쁜 셀카 찍기
"
        android:textColor="#9FADF1"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="#5C4B7A"
        android:text="운현궁-깡통만두-인"
        android:textColor="#BEC9F3" />

</LinearLayout>
<LinearLayout
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
<LinearLayout
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="100dp"/>


<TextView
    android:id="@+id/textView4"
    android:layout_width="374dp"
    android:layout_height="299dp"
    android:layout_gravity="center"
    android:background="#3D4672"
    android:gravity="center"
    android:text="운현궁에서 예쁜 사진을 많이많이 남겨보자\n\n
유명한 깡통만두를 먹어보자 \n\n깡통만두 뿐만 아니라 육전 보쌈 등 \n\n다른 메뉴들도 많이 있다.
\n\n인에서 고풍스러운 차 한잔으로 오늘의 코스를 마무리 해보자!

"
    android:textSize="10dp"
    android:textColor="#EEE8FA" />


</LinearLayout>
